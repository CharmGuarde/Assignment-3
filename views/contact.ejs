<div class="container mt-5">

    <h1 class="text-center mb-4">Contact Me</h1> <!--"text-center mb-4" centers the text and adds a space below the element -->

    <div class="contact-card card shadow p-4 mx-auto" style="max-width: 600px;"> <!--"contact-card card shadow p-4 mx-auto" styles the card with padding and centers it horizontally -->

        <form action="/contact" method="POST"> <!-- Form to submit contact information -->

            <!-- NAME --> 
            <div class="mb-3"> <!--"mb-3" adds a margin below the element -->
                <label for="name" class="form-label">Full Name</label> <!-- label for the name input field -->
                <input type="text" id="name" name="name" class="form-control" required> <!-- input field for the name with Bootstrap styling -->
            </div>

            <!-- EMAIL -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <!-- PHONE -->
            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" id="phone" name="phone" class="form-control" pattern="[0-9]{10}" placeholder="1234567890" required> <!-- pattern ensures a 10-digit phone number -->
            </div>

            <!-- MESSAGE -->
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea id="message" name="message" class="form-control message-box" required></textarea>
            </div>

            <!-- SUBMIT -->
            <button type="submit" class="btn btn-primary w-100"> <!--"btn btn-primary w-100" styles the button with Bootstrap and makes it full width -->
                <i class="fa-solid fa-paper-plane"></i> Send Message
            </button>

        </form>

    </div>

</div>
